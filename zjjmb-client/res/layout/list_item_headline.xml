<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ignition="http://github.com/ignition/schema"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/title"
        style="@style/text_list_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="2" />

    <TextView
        android:id="@+id/desc"
        style="@style/text_list_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/leftLayout"
        android:maxLines="3" />

    <RelativeLayout
        android:id="@+id/leftLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/desc"
        android:layout_below="@id/title" >

        <com.github.ignition.core.widgets.RemoteImageView
            android:id="@+id/image"
            android:layout_width="58dp"
            android:layout_height="65dp"
            ignition:imageUrl="http://developer.android.com/images/home/android-design.png" />

        <TextView
            android:id="@+id/dateText"
            style="@style/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:gravity="center_horizontal" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f9f9" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/leftLayout"
        android:layout_marginTop="5dp"
        android:background="@drawable/listspit" />

</RelativeLayout>